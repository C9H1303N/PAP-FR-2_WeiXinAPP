/* pages/Search/Search_detail.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-top: -200rpx;
  background: #ffffff
}
 
.nmsl {
  width: 80rpx;
  height: 80rpx;
}

.paper_info {
  font-size: 18px;
  font-weight: bold;
}

.head-imagee {
  width: 100%;
  height: 460rpx;
}
 
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}
 
.author-date{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
 
.avatar{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
 
.author{
  width: 80%;
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 5rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  color: #666;
}
 
.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
 
.date{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}
 
.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #ab556c;
}
 
.tool{
  margin-top: 20rpx;
}
 
.cicle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}
 
 
.cicle-img image{
  width: 90rpx;
  height: 90rpx;
}
 
.share-img{
  margin-left: 30rpx;
}
 
.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
 
.ellipsis_text{
  width: 100%;
  font: 16px;
  text-align: center
}

.detail{
  color: #666;
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient:vertical;
  overflow:hidden;
}
