/* pages/posts/post.wxss */
.post-container{
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  margin: 20rpx;
  border: 5rpx solid #808080;
  border-radius: 20rpx;
  background: #fbfbfb;
  height: 280rpx;
}

.post-author-date{
  margin-top: 0rpx;
}
.post-author{
  margin: 30rpx;
  height: 220rpx;
  width: 280rpx;
}
.post-like{
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  height: 80rpx;
  overflow: hidden;
}
.post-image{
  height: 100%;
  width: 100%;
}
.post-item{
  margin-top: -50rpx;
}