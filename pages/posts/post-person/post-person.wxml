<!--pages/posts/post-person.wxml-->
<template name='postPerson'>
  <view class='post-container'>
    <image src='{{icon}}' style="width: 180rpx; height: 180rpx; margin-left:50rpx; margin-top: 30rpx; position: absolute">
    </image>
    <view style="overflow: hidden;white-space: nowrap;text-overflow: ellipsis;word-break:break-all;margin-left: 270rpx; margin-top: 30rpx; font-size: 28px; height: 50px; position: absolute;width: 400rpx;">{{username}}</view>
    <view style="overflow: hidden;white-space: nowrap;text-overflow: ellipsis;word-break:break-all;margin-left: 270rpx; margin-top: 110rpx; font-size: 14px; height: 50px; position: absolute;width: 400rpx;">{{email}}</view>
  </view>
</template>
