/* pages/Message/Message.wxss */
.container{
  padding-top: 0rpx;
  padding-right: 0rpx;
  padding-left: 0rpx;
  background-color: #f2f2fa;
}
.search_frame{
  background-color: #5d7599;
  height: 100rpx;
  padding-top: 30rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.search_word{
  border-radius: 80rpx;
  margin-left: 20rpx;
  margin-right: 120rpx;
  height: 80rpx;
  padding-left: 30rpx;
  background-color: #fff;
}
.search_input{
  align-content: center;
  height: 100%;
  width: 100%;
}
.add{
  width: 55rpx;
  height: 55rpx;
  margin-left: -100rpx;
  margin-top: 10rpx;
}
.plus{
  margin-top: 3rpx;
}
.message_buttons{
  margin-top: 150rpx;
  background-color: #fff;
  width: 100%;
  height: 230rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 1;
}
.Mbutton{
  height: 230rpx;
  width: 180rpx;
  margin-right: 15rpx;
  margin-left: 15rpx;
  z-index: 2;
  background-color: #fff;
  position: relative;
  padding-top: 30rpx;
}
.Mbutton::after{
  border: none;
}
.button_img{
  z-index: 3;
  height: 80rpx;
  width: 80rpx;
  margin-left: -35rpx;
  margin-top: 22rpx;
  position: absolute;
}
.img{
  position: absolute;
  height: 180rpx;
  width: 180rpx;
  margin-top: -25rpx;
  margin-left: -85rpx;
}
.button_text{
  font-size: smaller;
  position: absolute;
  width: 100%;
  margin-top: 130rpx;
  margin-left: -85rpx;
  text-align: center;
}