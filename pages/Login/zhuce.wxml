<view style="height: 80rpx; align-content: center ">
    <view class = "temp01"></view>
    <view class = "temp01"></view>
    <view style="width: 80%; margin-left: 10%; text-align:center; ">
    <text style="font-size: 18px; align-content: center; color: black">注册账号</text>
    </view>
</view>
<view style="padding-top: 100rpx">
    <!-- <text class="title">注册账号</text> -->
<view style="padding-top: 20rpx">
<view class="inputView" > 
  <label class="loginLab">新建账户</label> 
  <input class="inputText" password="true" placeholder="新建账户名" bindinput="InputOldPass" maxlength='20' style="text-align:left; "/> 
 </view> 
 </view>
 <view style="padding-top: 20rpx">
 <view class="inputView" > 
  <label class="loginLab">邮箱</label> 
  <input class="inputText" password="true" placeholder="注册时使用的邮箱" bindinput="InputNewPass" maxlength='20' style="text-align:left; "/> 
 </view> 
 
</view>
<view style="padding-top: 20rpx">
 <view class="inputView" > 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入您的新密码" bindinput="InputCheckPass" maxlength='20' style="text-align:left; "/> 
 </view> 
</view>

<view style="padding-top: 20rpx">
 <view class="inputView" > 
  <label class="loginLab">确认密码</label> 
  <input class="inputText" password="true" placeholder="请确认您的密码" bindinput="InputCheckPass" maxlength='20' style="text-align:left; "/> 
 </view> 
</view>

<view style="padding-top: 20rpx">
 <view class="inputView" > 
  <label class="loginLab">验证码</label> 
  <input class="inputText" password="true" placeholder="请输入验证码" bindinput="InputCheckPass" maxlength='20' style="text-align:left; "/> 
 </view> 
</view>

<view class="padding flex flex-direction">
  <button class="cu-btn bg-blue lg" bindtap="changepass">发送确认邮件</button>
  <button class="cu-btn bg-grey margin-tb-sm lg" bindtap="exit">确认注册</button>
</view>
</view>